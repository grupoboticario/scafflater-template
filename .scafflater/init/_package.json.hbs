{
  "name": "{{parameters.name}}",
  "version": "1.0.0",
  "description": "{{parameters.description}}",
  "scripts": {
    "update-readme": "scafflater-cli partial:run update-readme",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "scafflater",
    "templater",
    "scaffold"
  ],
  "workspaces": [
    ".scafflater/hooks",
    ".scafflater/helpers",
    ".scafflater/extension"
  ],
  "license": "MIT",
  "devDependencies": {
    "scafflater-cli": "^0.0.68"
  }
  {{#if gitUser}}
  ,
  "author": "{{gitUser.user.name}} ({{gitUser.user.email}})"
  {{/if}}
  {{#if git.remote.origin.url}}
  ,
    "repository": {
      "type": "git",
      "url": "git+{{git.remote.origin.url}}"
    },
    "bugs": {
      "url": "{{git.bugs_url}}"
    },
    "homepage": "{{git.home_url}}"
  {{/if}}
}
